{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["esnext", "dom", "es2015"],
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "types": ["node"],
        "skipLibCheck": true  // Puedes habilitar esto temporalmente para evitar algunos problemas con los tipos de bibliotecas
    },
    "include": ["src/**/*.ts"]
}